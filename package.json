{
  "name": "@carnesen/util",
  "description": "Utilities for JavaScript applications",
  "version": "0.0.6",
  "main": "lib/index.js",
  "scripts": {
    "build:commonjs": "babel src --out-dir lib --ignore *-test.js",
    "build": "npm run clean && npm run build:commonjs",
    "clean": "rimraf lib",
    "lint": "standard 'src/**/*.js'",
    "lint:fix": "npm run lint -- --fix",
    "preversion": "npm test",
    "version": "npm run build",
    "postversion": "git push && git push --tags && npm publish",
    "test": "npm run lint && npm run test:unit && npm run build",
    "test:unit": "mocha --compilers js:babel-register src/**/*-test.js"
  },
  "dependencies": {
    "@carnesen/checks": "0.0.1"
  },
  "devDependencies": {
    "babel-cli": "6.16.0",
    "babel-preset-es2015": "6.16.0",
    "babel-register": "6.16.3",
    "chai": "3.5.0",
    "mocha": "3.1.0",
    "rimraf": "2.5.4",
    "standard": "8.3.0"
  },
  "files": [
    "lib"
  ],
  "author": {
    "name": "Chris Arnesen",
    "email": "chris.arnesen@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/carnesen/util.git"
  },
  "bugs": {
    "url": "https://github.com/carnesen/util/issues"
  },
  "homepage": "https://github.com/carnesen/util",
  "license": "MIT",
  "standard": {
    "globals": [
      "describe",
      "it"
    ]
  }
}
